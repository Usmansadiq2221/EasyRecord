<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/feedbackbgfile"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/_headingItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/widraw_heading_bg"
                android:fontFamily="@font/keepcalm_medium"
                android:padding="5dp"
                android:text="Heading"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:text="Sender Name:"
                android:textColor="@color/myFav"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/_senderNameItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:textAlignment="textEnd"
                android:textColor="@color/myFavTealLight"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:text="Sender CNIC No:"
                android:textColor="@color/myFav"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/_senderCnicItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:textAlignment="textEnd"
                android:textColor="@color/myFavTealLight"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:text="Transaction Id:"
                android:textColor="@color/myFav"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/_tIdItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:textAlignment="textEnd"
                android:textColor="@color/myFavTealLight"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:text="Receiver Phone No:"
                android:textColor="@color/myFav"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/_tPhoneNoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:textAlignment="textEnd"
                android:textColor="@color/myFavTealLight"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:text="Transaction Date:"
                android:textColor="@color/myFav"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/_tDateItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:textAlignment="textEnd"
                android:textColor="@color/myFavTealLight"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:text="Amount"
                android:textColor="@color/myFav"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/_tAmountItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:textAlignment="textEnd"
                android:textColor="@color/myFavTealLight"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:text="Company :"
                android:textColor="@color/myFav"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/_companyItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/keepcalm_medium"
                android:textAlignment="textEnd"
                android:textColor="@color/myFavTealLight"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/_feedbackCommentItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColor="@color/myFav"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>